{
  "name": "status-code-karuta",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "node dist/server/index.js",
    "lint": "next lint"
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "node_modules",
      ".next"
    ],
    "watch": [
      "server"
    ],
    "exec": "ts-node --project tsconfig.server.json server/index.ts",
    "ext": "js ts"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.6",
    "express": "^4.17.3",
    "next": "12.1.4",
    "nodemon": "^2.0.15",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "socket.io": "^4.4.1",
    "socket.io-client": "^4.4.1",
    "ts-node": "^10.7.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "17.0.23",
    "@types/react": "18.0.0",
    "@types/react-dom": "18.0.0",
    "eslint": "8.12.0",
    "eslint-config-next": "12.1.4",
    "typescript": "4.6.3"
  }
}
